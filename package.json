{
  "name": "smarter-bullets",
  "version": "0.1.0",
  "scripts": {
    "install:all": "npx install-peerdeps --dev eslint-config-react-app && cd ./client && npm install && cd ../server && npm install",
    "client": "cd ./client && npm start",
    "server": "cd ./server && npm run start:dev",
    "database": "chmod +x ./server/data/database.dev.sh && ./server/data/database.dev.sh",
    "fullstack": "npm run install:all && npm run database & npm run server & npm run client",
    "lint": "eslint ./ --ext '.ts,.tsx' --fix",
    "lint:security": "eslint --no-eslintrc --config security.eslintrc.yaml ./ --ext '.ts,.tsx --fix'",
    "test:client": "cd ./client && npm test",
    "test:server": "cd ./server && npm test",
    "build:client": "cd ./client && npm run build",
    "build:server": "cd ./server && npm run build",
    "build:integrate": "cp ./client/dist/bundle.js ./server/public && cp ./client/dist/index.html ./server/public",
    "build:deploy": ""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.8.8",
    "react": "^18.2.0"
  }
}
