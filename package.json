{
  "name": "smarter-bullets",
  "version": "0.1.0",
  "scripts": {
    "install:all": "npx install-peerdeps --dev eslint-config-react-app && cd ./client && npm install && cd ../api && npm install",
    "start:client": "cd ./client && npm start",
    "start:api": "cd ./api && npm run start:dev",
    "start:database": "chmod +x ./api/data/start:database.sh && ./api/data/start:database.sh",
    "start:fullstack": "chmod +x scripts/start:fullstack.sh && scripts/start:fullstack.sh",
    "lint:general": "eslint ./ --ext '.ts,.tsx' --fix",
    "lint:security": "eslint --no-eslintrc --config security.eslintrc.yaml ./ --ext '.ts,.tsx --fix'",
    "test:client": "cd ./client && npm test",
    "test:api": "cd ./api && npm test",
    "test:fullstack": "test:api && test:client",
    "build:client": "cd ./client && npm run build",
    "build:api": "cd ./api && npm run build",
    "build:integrate": "cp ./client/dist/bundle.js ./api/public && cp ./client/dist/index.html ./api/public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.8.8",
    "react": "^18.2.0"
  }
}
